<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>base-package</param-name>
        <param-value>tech.itpark</param-value>
    </context-param>

    <listener>
        <listener-class>tech.itpark.framework.listener.ContextLoadDestroyListener</listener-class>
    </listener>

    <!--<filter>
        <filter-name>JwtTokenStatusFilter</filter-name>
        <filter-class>tech.itpark.project_delivery_web.security.filter.JwtTokenStatusFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>JwtTokenStatusFilter</filter-name>
        <servlet-name>front-controller</servlet-name>
    </filter-mapping>-->

    <servlet>
        <servlet-name>front-controller</servlet-name>
        <servlet-class>tech.itpark.framework.servlet.FrontController</servlet-class>
        <load-on-startup>1</load-on-startup>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>front-controller</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>